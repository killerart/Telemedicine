<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/ProximaFont</item>
    </style>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/font_family_proxima_nova</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/font_family_proxima_nova</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/SlightlyBlue</item>
        <item name="colorControlActivated">@color/StarsColor</item>
    </style>
</resources>